<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password for <%= email %></title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f8f9fa;
    }
    .container {
      max-width: 500px;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-group {
      margin-bottom: 15px;
    }
    .btn-primary {
      width: 100%;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Reset Password for <%= email %></h1>
    <form id="resetPasswordForm" method="PUT">
      <div class="form-group">
        <label for="newPassword">New Password:</label>
        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
      </div>
      <div class="form-group">
        <label for="newPasswordConfirmed">Confirm New Password:</label>
        <input type="password" class="form-control" id="newPasswordConfirmed" name="newPasswordConfirmed" required>
      </div>
      <button type="submit" class="btn btn-primary">Reset Password</button>
      <div id="message" class="mt-3">
        <% if (messages.length > 0) { %>
            <div class="alert alert-error" role="alert">
              <%= messages[0] %>
            </div>
            <% } %>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    document.getElementById('resetPasswordForm').addEventListener('submit', async function(event) {
      event.preventDefault(); // Prevent form from reloading the page
      const form = event.target;
      const messageDiv = document.getElementById('message');
      const newPassword = form.newPassword.value;
      const newPasswordConfirmed = form.newPasswordConfirmed.value;

      if (newPassword.length < 6) {
        messageDiv.textContent = 'Password must be atleast 6 characters long';
        messageDiv.classList.add('alert', 'alert-danger');
        return;
      }
      if (newPassword !== newPasswordConfirmed) {
        messageDiv.textContent = 'Passwords do not match!';
        messageDiv.classList.add('alert', 'alert-danger');
        return
      }

      try {
        const response = await fetch(`/api/account/reset-password/<%= token %>`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            newPassword: form.newPassword.value,
            newPasswordConfirmed: form.newPasswordConfirmed.value
          })
        });

        const data = await response.json();
        if (!response.ok) {
          throw new Error(data.error || 'An error occurred');
        }

        messageDiv.textContent = 'Password reset successful! Redirecting you to login page';
        messageDiv.classList.add('alert', 'alert-success');
        setTimeout(() => { window.location.href = '/login'; }, 3000);
      } catch (error) {
        
        console.error('Error:', error);
        location.reload()
      }
    });
  </script>
</body>
</html>
